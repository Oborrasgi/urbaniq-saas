generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  customerId    String?
  priceId       String?
  credits       Int       @default(0)
  hasAccess     Boolean   @default(false)
  subscribedAt  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  role          Role      @default(USER)
  planId        String?
  accounts      Account[]
  blogs         Blog[]
  plan          Plan?     @relation(fields: [planId], references: [id])
  leads         Lead[]

  @@map("users")
}

model Account {
  id                String   @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model VerificationToken {
  id         String   @id @default(uuid())
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@index([token])
  @@map("verification_tokens")
}

model Plan {
  id             String   @id @default(uuid())
  slug           String   @unique
  title          String
  description    String?
  mode           PlanMode @default(SUBSCRIPTION)
  price          Float    @default(0)
  priceId        String?
  monthlyCredits Int      @default(0)
  yearlyCredits  Int      @default(0)
  monthlyPrice   Float    @default(0)
  yearlyPrice    Float    @default(0)
  monthlyPriceId String?
  yearlyPriceId  String?
  isActive       Boolean  @default(true)
  canBeDisabled  Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  hasApiAccess   Boolean  @default(false)
  hasAvm         Boolean  @default(false)
  hasLeadScoring Boolean  @default(false)
  hasLegalAI     Boolean  @default(false)
  users          User[]

  @@map("plans")
}

model Blog {
  id              String    @id @default(uuid())
  slug            String    @unique
  title           String
  content         String
  description     String
  image           String
  authorId        String
  tags            String[]  @default([])
  publishedAt     DateTime?
  isPublished     Boolean   @default(false)
  metaTitle       String?
  metaDescription String?
  metaKeywords    String[]  @default([])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  author          User      @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@map("blogs")
}

model Lead {
  id             String      @id @default(uuid())
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  // Owner data
  name           String
  email          String
  phone          String?

  // Property data
  address        String
  city           String
  postalCode     String?
  propertyType   String
  estimatedValue Float?

  // Intelligence
  score          Int         @default(0)
  intentWindow   String?     // "30", "60", "90"
  status         LeadStatus  @default(NEW)

  // Relations
  userId         String
  user           User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@map("leads")
}

enum LeadStatus {
  NEW
  ANALYZING
  QUALIFIED
  CONTACTED
  WON
  LOST
}

enum Role {
  USER
  ADMIN
  PRO
  BUSINESS
}

enum PlanMode {
  SUBSCRIPTION
  ONE_TIME_PAYMENT
}
