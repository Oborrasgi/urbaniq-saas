generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  accounts      Account[]
  customerId    String?
  priceId       String?
  credits       Int       @default(0)
  isAdmin       Boolean   @default(false)
  hasAccess     Boolean   @default(false)
  subscribedAt  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  blogs         Blog[]

  @@map("users")
}

model Account {
  id                String   @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model VerificationToken {
  id         String   @id @default(uuid())
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@index([token])
  @@map("verification_tokens")
}

enum PlanMode {
  SUBSCRIPTION
  ONE_TIME_PAYMENT
}

model Plan {
  id             String   @id @default(uuid())
  slug           String   @unique // "free", "starter", "boost", "dominate", "ultra"
  title          String // "Free Plan", "Starter Plan", etc.
  description    String?
  mode           PlanMode @default(SUBSCRIPTION)
  // One time payment price and price ID
  price          Float    @default(0) // one time payment price
  priceId        String?
  // Subscription credits per billing interval
  monthlyCredits Int      @default(0) // e.g., 400, 1200, 2400, 5000
  yearlyCredits  Int      @default(0) // typically monthlyCredits * 12
  // Subscription pricing for different billing intervals
  monthlyPrice   Float    @default(0) // $0, $19, $49, $99, $159
  yearlyPrice    Float    @default(0) // $0, $190, $490, $990, $1590 (with discounts)
  monthlyPriceId String?
  yearlyPriceId  String?
  isActive       Boolean  @default(true)
  canBeDisabled  Boolean  @default(false) // True for free plan
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("plans")
}

model Blog {
  id              String    @id @default(uuid())
  slug            String    @unique
  title           String
  content         String
  description     String
  image           String
  authorId        String
  author          User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  tags            String[]  @default([])
  publishedAt     DateTime?
  isPublished     Boolean   @default(false)
  metaTitle       String?
  metaDescription String?
  metaKeywords    String[]  @default([])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("blogs")
}
